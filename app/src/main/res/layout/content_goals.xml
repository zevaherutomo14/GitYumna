<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GoalsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FDAF17"
            android:outlineSpotShadowColor="@color/black"
            android:elevation="10dp">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="60dp"
                card_view:cardCornerRadius="10dp">
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/imageGoals"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/imagegoals"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:elevation="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/circle"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="125dp"
                    android:src="@drawable/imagegoals2"
                    android:elevation="15dp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/textFirst"
                android:layout_below="@id/imageGoals"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:elevation="20dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#FDAF17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get your Islamic"/>

            <TextView
                android:layout_below="@id/textFirst"
                android:textAlignment="center"
                android:elevation="20dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#FDAF17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Knowledge now !"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/activity_horizontal_margin"
            android:layout_marginHorizontal="45dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:outlineSpotShadowColor="@color/black"
                android:id="@+id/mualaf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_orange"
                android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                android:paddingHorizontal="@dimen/text_margin"
                android:text="Tentang Mualaf"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="@dimen/activity_vertical_margin"
                android:textColor="@color/white"/>
            <Button
                android:outlineSpotShadowColor="@color/black"
                android:id="@+id/syahadat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="@dimen/activity_vertical_margin"
                android:background="@drawable/button_orange"
                android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                android:paddingHorizontal="@dimen/text_margin"
                android:text="Syahadat"
                android:textColor="@color/white"/>
            <Button
                android:outlineSpotShadowColor="@color/black"
                android:id="@+id/bersuci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_orange"
                android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                android:paddingHorizontal="@dimen/text_margin"
                android:text="Bersuci"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="@dimen/activity_vertical_margin"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/wudhu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="@dimen/activity_vertical_margin"
                android:background="@drawable/button_orange"
                android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                android:paddingHorizontal="@dimen/text_margin"
                android:text="Wudhu"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/shalat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="@dimen/activity_vertical_margin"
                android:background="@drawable/button_orange"
                android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                android:paddingHorizontal="@dimen/text_margin"
                android:text="Shalat"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>