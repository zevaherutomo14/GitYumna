<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JadwalShalatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">


        <LinearLayout
            android:id="@+id/subuh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <View
                    android:layout_width="5dp"
                    android:layout_height="35dp"
                    android:background="#E6E6E6"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"

                android:id="@+id/card_view_subuh"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingHorizontal="10dp"
                card_view:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/info_text_subuh"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Subuh"
                    android:gravity="center_vertical|start"
                    android:textSize="20sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end">
                    <ImageView
                        android:id="@+id/loncengSubuh"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/lonceng"/>

                    <TextView
                        android:id="@+id/tv_fajr_value"
                        android:layout_toRightOf="@id/loncengSubuh"
                        android:paddingRight="20dp"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="20sp"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>



        <LinearLayout
            android:layout_below="@id/subuh"
            android:id="@+id/dzuhur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#E6E6E6"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"

                android:id="@+id/card_view_dzuhur"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingHorizontal="10dp"
                card_view:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/info_text_dzuhur"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dzuhur"
                    android:gravity="center_vertical|start"
                    android:textSize="20sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end">
                    <ImageView
                        android:id="@+id/loncengDzuhur"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/lonceng"/>

                    <TextView
                        android:id="@+id/tv_dhuhr_value"
                        android:layout_toRightOf="@id/loncengDzuhur"
                        android:paddingRight="20dp"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="20sp"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/asar"
            android:layout_below="@id/dzuhur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#E6E6E6"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <android.support.v7.widget.CardView
                app:cardBackgroundColor="#FFF"
                android:id="@+id/card_view_ashar"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="25dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingHorizontal="10dp"
                card_view:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/info_text_ashar"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ashar"
                    android:gravity="center_vertical|start"
                    android:textSize="20sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end">
                    <ImageView

                        android:id="@+id/loncengAshr"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/lonceng"/>

                    <TextView
                        android:id="@+id/tv_asr_value"
                        android:layout_toRightOf="@id/loncengAshr"
                        android:paddingRight="20dp"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="20sp"
                        android:gravity="center_vertical"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/maghrib"
            android:layout_below="@id/asar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#E6E6E6"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_maghrib"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="25dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingHorizontal="10dp"
                card_view:cardCornerRadius="10dp">

                <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/info_text_maghrib"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Maghrib"
                    android:gravity="center_vertical|start"
                    android:textSize="20sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end">
                    <ImageView
                        android:id="@+id/loncengMaghrib"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/lonceng"/>

                    <TextView
                        android:id="@+id/tv_maghrib_value"
                        android:layout_toRightOf="@id/loncengMaghrib"
                        android:paddingRight="20dp"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="20sp"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/isya"
            android:layout_below="@id/maghrib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp">
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <View
                    android:layout_width="5dp"
                    android:layout_height="35dp"
                    android:background="#E6E6E6"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_isya"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingHorizontal="10dp"
                card_view:cardCornerRadius="10dp">

                <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/info_text_isya"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Isya"
                    android:gravity="center_vertical|start"
                    android:textSize="20sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end">
                    <ImageView
                        android:id="@+id/loncengIsya"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/lonceng"/>

                    <TextView
                        android:id="@+id/tv_isha_value"
                        android:layout_toRightOf="@id/loncengIsya"
                        android:paddingRight="20dp"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="20sp"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
