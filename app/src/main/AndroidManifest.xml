        <activity android:name=".Compas.CompassActivity"></activity>
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DetailArtActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ArtikelActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".GoalsActivity" />
        <activity
            android:name=".Goals.MualafActivity"
            android:label="Tentang Mualaf"
            android:theme="@style/AppTheme"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Goals.ShalatActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Goals.SyahadatActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Goals.BersuciActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Goals.WudhuActivity"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".Goals.activity_kuismualaf" />
        <activity android:name=".Goals.activity_kuissyahadat" />
        <activity android:name=".Goals.activity_kuisshalat" />
        <activity android:name=".Goals.activity_kuiswudhu" />
        <activity android:name=".Goals.activity_kuisbersuci" />
    </application>

</manifest>